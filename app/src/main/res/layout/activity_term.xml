<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/term_padding"
    tools:context="com.zaoqibu.zaoqibukindergartenmusic.TermActivity">

    <ListView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/playlistView"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_above="@+id/linearLayout" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:id="@+id/linearLayout"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="8dp"
        android:gravity="center_horizontal">

        <ImageButton
            android:layout_width="@dimen/image_button_size"
            android:layout_height="@dimen/image_button_size"
            android:id="@+id/playlistItemPrevious"
            android:src="@drawable/ic_action_previous"
            android:background="@drawable/sound_control_button_selector"
            android:scaleType="fitCenter" />

        <ImageButton
            android:layout_width="@dimen/image_button_size"
            android:layout_height="@dimen/image_button_size"
            android:id="@+id/playlistItemPlay"
            android:src="@drawable/ic_action_play"
            android:background="@drawable/sound_control_button_selector"
            android:scaleType="fitCenter" />

        <ImageButton
            android:layout_width="@dimen/image_button_size"
            android:layout_height="@dimen/image_button_size"
            android:id="@+id/playlistItemNext"
            android:src="@drawable/ic_action_next"
            android:background="@drawable/sound_control_button_selector"
            android:scaleType="fitCenter" />
    </LinearLayout>

</RelativeLayout>
