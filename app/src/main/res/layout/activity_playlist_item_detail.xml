<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView"
        android:src="@drawable/ic_launcher"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_above="@+id/playlistItemPlay" />

    <ImageButton
        android:layout_width="72dp"
        android:layout_height="72dp"
        android:id="@+id/playlistItemPrevious"
        android:src="@drawable/ic_action_previous"
        android:scaleType="fitCenter"
        android:layout_alignTop="@+id/playlistItemPlay"
        android:layout_toLeftOf="@+id/playlistItemPlay"
        android:layout_toStartOf="@+id/playlistItemPlay" />

    <ImageButton
        android:layout_width="72dp"
        android:layout_height="72dp"
        android:id="@+id/playlistItemPlay"
        android:src="@drawable/ic_action_play"
        android:scaleType="fitCenter"
        android:layout_above="@+id/seekBar"
        android:layout_centerHorizontal="true" />

    <ImageButton
        android:layout_width="72dp"
        android:layout_height="72dp"
        android:id="@+id/playlistItemNext"
        android:src="@drawable/ic_action_next"
        android:scaleType="fitCenter"
        android:layout_alignTop="@+id/playlistItemPlay"
        android:layout_toRightOf="@+id/playlistItemPlay"
        android:layout_toEndOf="@+id/playlistItemPlay" />

    <SeekBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/seekBar"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />
</RelativeLayout>
